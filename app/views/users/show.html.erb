
<div class="login_wrapper">
    <header class="head pb-2 pt-2 bg-warning bg-light title">
      <h3 class="text-white bg-warning px-2 ml-2">T C</h3>
      <ul　class="login_menu">
        <li class="title text-warning menu">
         <%=link_to "How to Use","/users/#{@user.id}/how_to_use",{ :class => "title text-warning"} %>
        </li>
        <li class="title text-warning menu">
        <%=link_to "To Create","/picture/#{@user.id}/make",{ :class => "title text-warning"} %>
        </li>
      </ul>
      <div class="dropdown">
        <!-- 切替ボタンの設定 -->
        <button type="button" class="btn btn-warning text-white dropdown-toggle" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <%= @current_user.name %>
        </button>
        <!-- ドロップメニューの設定 -->
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
          <%=link_to "マイページ","/users/#{@user.id}",{ :class => "dropdown-item"} %>
          <%=link_to "使い方","/users/#{@user.id}/how_to_use",{ :class => "dropdown-item"} %>
          <%=link_to "アカウント設定","/users/#{@user.id}/edit",{ :class => "dropdown-item"} %>
          <%=link_to "ログアウト","/logout",{method: :post, :class => "dropdown-item"} %>
        </div><!-- /.dropdown-menu -->
      </div>

      <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
     <% end %>

      <div class="clear"></div>
    </header>


  
  <div class="container">
    <% if @pictures %>
      <div class="row album">
      <% @pictures.each do |picture| %>
       <div class="col-sm-6 col-md-3 py-3 mt-5 bg-light work">
       <div class="card img-thumbnail">  
        <img class="card-img-top" src="<%= "/images/#{picture.image_name}" %>">
         <div class="card-body px-2 py-3">
          <h4 class="card-title text-center image_title text-secondary title"><%= "NAME：#{picture.title}" %></h4>
          <button type="hidden" class="btn image_button btn-warning mb-2"><a href="#" class="text-white title">Timecapsuleを編集する</a></button><br>
          <button type="hidden" class="btn image_button btn-primary mb-4"><a href="＃" class="text-white title">Timecapsuleを削除</a></button>
         </div>
       </div>    
       </div>
      <% end %> 
      </div> 
    <% else %>
   <h1 class="no_image title text-warning">Nothing Timecapsule</h1>
    <% end %>
  </div>

</div>



