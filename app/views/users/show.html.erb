
<div class="login_wrapper">
    <header class="head pb-2 pt-2 bg-warning bg-light title">
      <h3><%=link_to "T C","/users/#{@user.id}",{ :class => "d-block bg-warning px-2 ml-2 title text-white"} %></h3>     
      <ul　class="login_menu">
        <li class="title text-warning menu">
         <%=link_to "How to Use","/users/#{@user.id}/how_to_use",{ :class => "title text-warning"} %>
        </li>
        <li class="title text-warning menu">
        <%=link_to "To Create","/picture/#{@user.id}/make",{ :class => "title text-warning"} %>
        </li>
      </ul>
      <div class="dropdown">
        <!-- 切替ボタンの設定 -->
        <button type="button" class="btn btn-warning text-white dropdown-toggle" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <%= @current_user.name %>
        </button>
        <!-- ドロップメニューの設定 -->
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
          <%=link_to "マイページ","/users/#{@user.id}",{ :class => "dropdown-item"} %>
          <%=link_to "使い方","/users/#{@user.id}/how_to_use",{ :class => "dropdown-item"} %>
          <%=link_to "アカウント設定","/users/#{@user.id}/edit",{ :class => "dropdown-item"} %>
          <%=link_to "ログアウト","/logout",{method: :post, :class => "dropdown-item"} %>
        </div><!-- /.dropdown-menu -->
      </div>

      <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
     <% end %>

      <div class="clear"></div>
    </header>


  
  <div class="container">
    <% if @pictures  %>
     <h4 class="title text-warning text-center mt-3">Timecapsule一覧</h4>
      <div class="row album">
      <% @pictures.each do |picture| %>
       <div class="col-sm-6 col-md-3 py-3 mt-3 row-eq-height work center-block">
       <div class="card img-thumbnail"> 
        <%= link_to "/picture/#{picture.id}/image_show", target: "_blank" do %>
         <%= image_tag("/images/#{picture.image_name}", :class => "card-img-top") %>
        <% end %>       
         <div class="card-body px-2 py-3">
          <h4 class="card-title text-center image_title text-secondary title"><%= "NAME：#{picture.title}" %></h4>
          <%= link_to("Timecapsuleを編集", "/picture/#{picture.id}/image_edit", :class => "image_edit mb-2") %>
          <%= link_to("Timecapsuleを削除", "/picture/#{picture.id}/destroy", {method: "post", :class => "image_destroy",data: { :confirm => '削除します。よろしいですか?'} }) %>
         </div>
       </div>    
       </div>
      <% end %> 
      </div> 
    <% else %>
   <h4 class="title text-warning text-center mt-3">Nothing Timecapsule</h4>
    <% end %>
  </div>

</div>



