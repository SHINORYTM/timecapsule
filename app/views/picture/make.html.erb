<div class="login_wrapper">
    <header class="head pb-2 pt-2 bg-warning bg-light title">
      <h3><%=link_to "T C","/users/#{@user.id}",{ :class => "d-block bg-warning px-2 ml-2 title text-white"} %></h3> 
      <ul　class="login_menu">
        <li class="title text-warning menu">
         <%=link_to "How to Use","/users/#{@user.id}/how_to_use",{ :class => "title text-warning"} %>
        </li>
        <li class="title text-warning menu">
        <%=link_to "To Create","/picture/#{@user.id}/make",{ :class => "title text-warning"} %>
        </li>
      </ul>
      <div class="dropdown">
        <!-- 切替ボタンの設定 -->
        <button type="button" class="btn btn-warning text-white dropdown-toggle" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <%= @current_user.name %>
        </button>
        <!-- ドロップメニューの設定 -->
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
          <%=link_to "マイページ","/users/#{@user.id}",{ :class => "dropdown-item"} %>
          <%=link_to "使い方","/users/#{@user.id}/how_to_use",{ :class => "dropdown-item"} %>
          <%=link_to "アカウント設定","/users/#{@user.id}/edit",{ :class => "dropdown-item"} %>
          <%=link_to "ログアウト","/logout",{method: :post, :class => "dropdown-item"} %>
        </div><!-- /.dropdown-menu -->
      </div>

      <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
     <% end %>

      <div class="clear"></div>
    </header>

    <div class="make_album">
     <div class="container middle-wrapper bg-light  border-bottom text-center py-3">
      <div class="login_form">
        <h4 class="title text-warning">Create a Timecapsule</h4>
         <% if @error_message %>
         <div class="form-error mt-3">
         <%= @error_message %>
         </div>
         <% end %>
        <%= form_tag("/picture/#{@user.id}/create", {multipart: true}) do %>
         <div class="input mt-3 mb-3"><input name="sent_email" value="<%= @picture.sent_email %>" placeholder="メールアドレス<送信先＞"></div>
         <div class="input mt-3 mb-3"><input name="title" value="<%= @picture.title %>"  placeholder="アルバム名"></div>
         <div class="textarea mt-3 mb-3"><textarea name="coment" cols="45" rows="6" value="<%= @picture.coment %>" placeholder="メッセージ"></textarea></div>
         <div class="input input_image mt-3 mb-2"><input name="image" type="file"></div>
         <div class="h6 input_time mt-3 mb-3">送信予定日: <input type="datetime-local" name="send_time" step="60"></div>
         <div class="title input create_album mb-3"><input type="submit" value="Timecapsuleを保存"></div>
        <% end %>
      </div>
     </div>
    </div>

</div>
